.container
  .row
    .col-md-offset-3.col-md-6
      .panel.panel-default
        .panel-heading
          %h3.panel-title= t '.change_my_password'
        .panel-body
          = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
            = f.input :reset_password_token, as: :hidden
            = f.full_error :reset_password_token
            = f.input :password, label: t('.new_password'), required: true, autofocus: true, hint: t('.minimum_password_length_hint', length: @minimum_password_length)
            = f.input :password_confirmation, label: t('.confirm_new_password'), required: true
            = f.button :submit, t('.change_my_password')
